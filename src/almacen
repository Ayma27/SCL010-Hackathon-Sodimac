import React from 'react';

import firebase from '../config/firebase'

const db = firebase.firestore();
const data = db.collection('sodimac');

const retrieveMap = () => {
    
    return new Promise((resolve, reject) => {
        data.get()
            .then(function (querySnapshot) {
                let imgMap = [];
                querySnapshot.forEach(function (doc) {
                    let data=doc.data()
                    data["id"]=doc.id
                    imgMap.push(data)

                });
                resolve(imgMap)
            })
            .catch(function (error) {
                console.log("Error getting documents: ", error);
                reject(error)
            });

    })
};

// vista incial, donde se va a crear el juego
const PrincipalPage  = () => {

    //Hooks
    const [productsList, setproductsList] = React.useState([]);

    React.useEffect(() => {
        //llamando al metodo obtener
        retrieveMap().then(products => {
        setproductsList(products);
         }) 
     },[]);

  return (
    <div id="outer-section">
    <h1> Mapa</h1>
   
    <div class="col-md-3">
    <input placeholder="Estoy en el pasillo"></input>
    <button className="btnSignIn" >buscar ruta</button>
    </div>
    </div>   
  );
};

export default PrincipalPage;